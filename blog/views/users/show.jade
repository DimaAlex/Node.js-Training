extends ../layout/layout
block vars
  - var title= 'Account'

block content
  h1 Account

  if user.firstName
    h4 First name
    p= user.firstName

  if user.lastName
    h4 Last name
    p= user.lastName

  if usercity
    h4 From city
    p= user.city

  h4 Created at
  p= user.created

  unless currentUser.id === user.id
    a(href='/users/#{user.id}/articles').btn.btn-primary Articles of this user

  if currentUser.id === user.id
    a(href='/users/#{user.id}/edit').btn.btn-primary Edit account
    .pad
    a(href='', onclick="$('<form method=POST action=/users/#{currentUser.id}/destroy>').submit();return false").btn.btn-danger Delete account
